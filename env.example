# Database Configuration
# PostgreSQL connection string - REQUIRED
DATABASE_URL=postgresql://picxel_user:picxel_password@postgres:5432/picxel_puzzle

# PostgreSQL Database Settings (used by postgres service)
POSTGRES_DB=picxel_puzzle
POSTGRES_USER=picxel_user
POSTGRES_PASSWORD=picxel_password

# Server Configuration
NODE_ENV=production
PORT=5000

# Optional: Session Secret (recommended for production)
# SESSION_SECRET=your-very-secure-random-string-here

# Optional: File Upload Configuration
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_PATH=./uploads

# Optional: Database Pool Configuration
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Optional: Logging Configuration
# LOG_LEVEL=info
